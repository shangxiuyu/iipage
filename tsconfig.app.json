{
  "compilerOptions": {
    // "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo", // 需配合 incremental/composite 使用，暂时注释
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    // "erasableSyntaxOnly": true, // 非官方配置，已移除
    "noFallthroughCasesInSwitch": true
    // "noUncheckedSideEffectImports": true // 非官方配置，已移除
  },
  "include": ["src", "node_modules/NodeCard"]
}
