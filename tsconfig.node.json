{
  "compilerOptions": {
    // "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo", // 需配合 incremental/composite 使用，暂时注释
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // "erasableSyntaxOnly": true, // 非官方配置，已移除
    "noFallthroughCasesInSwitch": true
    // "noUncheckedSideEffectImports": true // 非官方配置，已移除
  },
  "include": ["vite.config.ts"]
}
